&lt;html&gt;
&lt;head&gt;
&lt;script language=&quot;JavaScript&quot;&gt;
var de=0,n=0,suite=&#039;&#039;,max=1000;
function fixermax()
{max=prompt(&quot;Combien de fois voulez vous lancer le dé ?&quot;,8)
if (max&gt;1000){max=1000} lancer(max)
}
function lancer(n)
{ for (i=1 , suite=&#039;&#039; ; i&lt;=n ; i++ )
